<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HAN Technology - @ViewData["Title"]</title>
    <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/css/site.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link asp-append-version="true" rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/css/theme.css" />
    <link asp-append-version="true" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link asp-append-version="true" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    
    <header>
        <partial name="_Navbar" />
        @RenderSection("Header", false)
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        @RenderSection("Footer", false)
        <partial name="_Footer" />
    </footer>

    <button id="btnScrollToTop" aria-label="Yukarı Çık">
        <i class="fas fa-arrow-up"></i>
    </button>


    <script asp-append-version="true" src="~/lib/jquery/jquery.min.js"></script>
    <script asp-append-version="true" src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script asp-append-version="true" src="~/js/site.js"></script>
    <script asp-append-version="true" src="~/lib/font-awesome/js/all.min.js"></script>
    <script asp-append-version="true" src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script asp-append-version="true" src="~/js/theme-switcher.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>